<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="20dp">
	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<Button
		android:id="@+id/activity_mode_select_bt_standard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center"
		android:textSize="21sp"
		android:text="标准模式"
		android:layout_marginBottom="10dp"/>
	<Button
		android:id="@+id/activity_mode_select_bt_hell1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center"
		android:textSize="21sp"
		android:layout_marginBottom="10dp"
		android:text="地狱模式(简单版)"/>
	<Button
		android:id="@+id/activity_mode_select_bt_hell2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center"
		android:textSize="21sp"
		android:layout_marginBottom="10dp"
		android:text="地狱模式(中级)"/>
	<Button
		android:id="@+id/activity_mode_select_bt_hell3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:gravity="center"
		android:textSize="21sp"
		android:layout_marginBottom="10dp"
		android:text="地狱模式(魔鬼)"/>
		
	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

</LinearLayout>