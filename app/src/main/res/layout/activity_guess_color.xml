<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="拖动下方的滚动条，使中间色块为左右两个色块的中间色"
		android:layout_marginTop="20dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"/>
	
	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>
	
	<LinearLayout
		android:id="@+id/activity_guess_color_fl_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<androidx.cardview.widget.CardView
			android:id="@+id/activity_guess_color_cd_color_left"
			android:layout_width="100dp"
			android:layout_height="100dp"
			tools:cardCornerRadius="10dp"
			app:cardBackgroundColor="#FFFF0000"/>
		<androidx.cardview.widget.CardView
			android:id="@+id/activity_guess_color_cd_color_center"
			android:layout_width="100dp"
			android:layout_height="100dp"
			tools:cardCornerRadius="10dp"
			app:cardBackgroundColor="#FF00FF00"/>
		<androidx.cardview.widget.CardView
			android:id="@+id/activity_guess_color_cd_color_right"
			android:layout_width="100dp"
			android:layout_height="100dp"
			tools:cardCornerRadius="10dp"
			app:cardBackgroundColor="#FF0000FF"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>
	<TextView
		android:id="@+id/activity_guess_color_tv_answer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:textSize="20sp"
		android:textColor="#FF000000"
		android:gravity="center"
		android:lines="3"
		tools:text="这是答案"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="50dp"
		android:orientation="horizontal">
		<Button
			android:id="@+id/activity_guess_color_bt_answer"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:text="看答案"/>
		<Button
			android:id="@+id/activity_guess_color_bt_next"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:text="下一题"/>
	</LinearLayout>
	<com.sunzk.colortest.view.HSBColorSelector
		android:id="@+id/activity_guess_color_hsb_color_selector"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp"/>

</LinearLayout>