			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="10dp"
			android:textSize="@dimen/view_hsb_color_selector_seek_bar_text_size"
			android:text="S"/>
		<SeekBar
			android:id="@+id/activity_mock_color_sb_s"
			android:layout_width="0dp"
			android:layout_height="@dimen/view_hsb_color_selector_seek_bar_height"
			android:layout_weight="1"
			android:paddingTop="@dimen/view_hsb_color_selector_seek_bar_padding"
			android:paddingBottom="@dimen/view_hsb_color_selector_seek_bar_padding"
			android:thumb="@drawable/thumb"
			android:splitTrack="false"/>
		<EditText
			android:id="@+id/activity_mock_color_tv_s"
			android:layout_width="@dimen/view_hsb_color_selector_seek_bar_input_width"
			android:layout_height="wrap_content"
			android:textSize="@dimen/view_hsb_color_selector_seek_bar_text_size"
			android:singleLine="true"
			android:lines="1"
			android:inputType="number"
			android:gravity="center"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="10dp"
			android:textSize="@dimen/view_hsb_color_selector_seek_bar_text_size"
			android:text="%"/>
	</LinearLayout>
	<!--	色值B	-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:layout_marginBottom="30dp"
