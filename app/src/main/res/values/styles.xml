<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="actionBarSize">0dp</item>
	</style>

	<style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="background">@color/default_activity_background</item>
	</style>


	<style name="ModeItem">
		<item name="android:background">@drawable/bg_common_bt</item>
		<item name="android:textColor">#FF404040</item>
		<item name="android:textSize">21sp</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="CommonButton">
		<item name="android:background">@drawable/bg_common_bt</item>
		<item name="android:textColor">@color/common_bt_text</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="CommonButton_Dark">
		<item name="android:background">@drawable/bg_common_bt_dark</item>
		<item name="android:textColor">@color/common_bt_text_dark</item>
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="HSBColorSelectorStepButton">
		<item name="android:layout_width">@dimen/view_hsb_color_selector_step_button_size</item>
		<item name="android:layout_height">@dimen/view_hsb_color_selector_step_button_size</item>
		<item name="android:layout_marginStart">@dimen/view_hsb_color_selector_seek_bar_fine_tuning_margin</item>
		<item name="android:layout_marginEnd">@dimen/view_hsb_color_selector_seek_bar_fine_tuning_margin</item>
		<item name="android:padding">@dimen/view_hsb_color_selector_step_button_padding</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>

</resources>
