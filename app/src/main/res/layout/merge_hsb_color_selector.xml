			android:layout_height="@dimen/view_hsb_color_selector_seek_bar_size"
			android:layout_marginStart="@dimen/view_hsb_color_selector_seek_bar_fine_tuning_margin"
			android:clickable="true"
			android:focusable="true"
			android:src="@drawable/seek_fine_tuning_right"/>
	</LinearLayout>
	
