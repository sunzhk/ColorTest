			android:id="@+id/activity_mock_color_sb_b"
			android:layout_width="0dp"
			android:layout_height="@dimen/view_hsb_color_selector_seek_bar_height"
			android:layout_weight="1"
			android:paddingTop="@dimen/view_hsb_color_selector_seek_bar_padding"
			android:paddingBottom="@dimen/view_hsb_color_selector_seek_bar_padding"
			android:thumb="@drawable/thumb"
			android:splitTrack="false"/>
		<EditText
			android:id="@+id/activity_mock_color_tv_b"
			android:layout_width="@dimen/view_hsb_color_selector_seek_bar_input_width"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="@dimen/view_hsb_color_selector_seek_bar_text_size"
			android:singleLine="true"
